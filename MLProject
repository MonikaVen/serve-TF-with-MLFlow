name: test

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      batch_size: {type: int, default: 8}
      train_epochs: {type: int, default: 3}
      test_file: {type: string, default: "./data/test.parquet"}
      train_file: {type: string, default: "./data/train.parquet"}
      dp_rate: {type: float, default: 0.3}
      data_limit: {type: int, default: 40}
    command: "python main.py --batch_size {batch_size} --train_epochs {train_epochs} --test_file {test_file} --train_file {train_file} --dp_rate {dp_rate} --data_limit {data_limit}"

